@model MEGAPos.Models.SalesAdminViewModel
@{
    ViewBag.Title = "Sales Admin";
}
    <link href="~/Content/UI/greybg.css" rel="stylesheet" />
    <h2>@ViewBag.Title</h2>

@* Side Bar Menu *@
<div class="side-menu">
    <div class="left-side nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
        <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Home</a>
        <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Distributors</a>
        <a class="nav-link" id="v-pills-role-tab" data-toggle="pill" href="#v-pills-role" role="tab" aria-controls="v-pills-role" aria-selected="false">Sales Team</a>
        
    </div>
    <div class="right-side tab-content">
        @* HomeTAB *@
        <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
            @* Inner Tabs *@
            <ul class="nav nav-pills mb-3 inner-tab" id="pills-tab" role="tablist">
                <li class="nav-item inner-tab-inner">
                    <a class="nav-link active nav-link0" id="pills-sales-tab" data-toggle="pill" href="#pills-sales" role="tab" aria-controls="pills-sales" aria-selected="true">Sales</a>
                </li>
                <li class="nav-item inner-tab-inner">
                    <a class="nav-link nav-link0" id="pills-purchase-tab" data-toggle="pill" href="#pills-purchase" role="tab" aria-controls="pills-purchase" aria-selected="false">Purchase</a>
                </li>
            </ul>
            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade show active" id="pills-sales" role="tabpanel" aria-labelledby="pills-sales-tab">
                    SALES TAB
                    <p class="users-action">
                        @Html.ActionLink("New Sale", "NewSale", "Sales", null, new { @class = "btn btn-primary" })
                    </p>
                </div>
                <div class="tab-pane fade" id="pills-purchase" role="tabpanel" aria-labelledby="pills-purchase-tab">
                    PURCHASE TAB
                    <p class="users-action">
                        @Html.ActionLink("New Purchase", "RegisterSalesAdmin", "Account", null, new { @class = "btn btn-primary" })
                    </p>
                </div>
            </div>
            @* Inner Tab End *@
        </div>
        <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
            USERS TAB
            <p class="users-action">
                @Html.ActionLink("New Distributor", "RegisterDistributor", "Account", null, new { @class = "btn btn-primary" })

            </p>

            <div class="users-content">
                <table class="table" id="companytable">
                    <thead>
                        <tr>
                            <th>
                                NAME
                            </th>
                            <th>
                                EMAIL
                            </th>
                            <th>
                                ROLE
                            </th>
                            <th>

                            </th>
                            @*<th>
                                DELETE
                            </th>*@


                        </tr>
                    </thead>
                    <tbody>

                        @*@foreach (var item in Model.users)
                        {*@
                        <tr>
                            <td>
                                @*@Html.DisplayFor(modelItem => item.UserName)*@

                            </td>
                            <td>
                                @*@Html.DisplayFor(modelItem => item.Email)*@

                            </td>
                            <td>
                                @*@Html.DisplayFor(modelItem => item.Roles)*@

                            </td>

                            <td>
                                @Html.ActionLink("Index", "Home"@*,new { id = item.Id }*@) |
                                @Html.ActionLink("Index", "Home"@*, new { id = item.Id }*@) |
                                @Html.ActionLink("Index", "Home"@*, new { id = item.Id }*@)
                            </td>
                        </tr>
                        @*}*@

                    </tbody>

                </table>
            </div>
        </div>
        <div class="tab-pane fade" id="v-pills-role" role="tabpanel" aria-labelledby="v-pills-role-tab">
            SALES TEAM TAB
            <p class="users-action">
                @Html.ActionLink("ADD Sales Person", "RegisterSalesPerson", "Account", null, new { @class = "btn btn-primary" })
            </p>

            <div class="users-content">
                <table class="table table-responsive table-striped" id="companytable">
                    <thead class="bg-dark">
                        <tr>
                            <th>
                                NAME
                            </th>
                            <th>
                                EMAIL
                            </th>
                            <th>
                                ROLE
                            </th>
                            <th>

                            </th>
                            @*<th>
                                DELETE
                            </th>*@


                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.users)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Roles)

                                </td>

                                <td>
                                    @Html.ActionLink("Index", "Home", new { id = item.Id }) |
                                    @Html.ActionLink("Index", "Home", new { id = item.Id }) |
                                    @Html.ActionLink("Index", "Home", new { id = item.Id })
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>
            </div>
        </div>
        @* Receipts TAB *@
        <div class="tab-pane fade" id="v-pills-role" role="tabpanel" aria-labelledby="v-pills-role-tab">
            Receipts TAB
            <p class="users-action">
                @Html.ActionLink("Sales Report", "RegisterSalesPerson", "Account", null, new { @class = "btn btn-primary" })
                @Html.ActionLink("Stock Report", "RegisterSalesPerson", "Account", null, new { @class = "btn btn-primary" })
            </p>

            <div class="users-content">
                <table class="table table-responsive table-striped" id="companytable">
                    <thead class="bg-dark">
                        <tr>
                            <th>
                                NAME
                            </th>
                            <th>
                                EMAIL
                            </th>
                            <th>
                                ROLE
                            </th>
                            <th>

                            </th>
                            @*<th>
                                DELETE
                            </th>*@


                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.users)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Roles)

                                </td>

                                <td>
                                    @Html.ActionLink("Index", "Home", new { id = item.Id }) |
                                    @Html.ActionLink("Index", "Home", new { id = item.Id }) |
                                    @Html.ActionLink("Index", "Home", new { id = item.Id })
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>
            </div>
        </div>
        @* Receipts TAB End *@
    </div>

</div>
@* SBM End *@


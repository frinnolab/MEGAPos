    .side-menu {
        display: flex;
        justify-content: space-between;
        max-width: 100%;
        padding: 0px;
    }

    .left-side {
        margin-right: 10px;
    }

    .right-side {
        /*background-color:blue;*/
        width: 100%;
    }

    inner-tab {
        display: flex;
        justify-content: space-between;
        width: 100%;
        padding: 0px;
    }

    .inner-tab-inner {
        width: 45%;
        margin: 5px;
        text-align: center;
    }
</style>
<link href="~/Scripts/boo/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/boo/bootstrap.js"></script>
<script src="~/Scripts/boo/bootstrap.bundle.js"></script>

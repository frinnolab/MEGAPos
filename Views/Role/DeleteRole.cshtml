@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Edit Role";
}
<link href="~/Content/UI/Register.css" rel="stylesheet" />

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("DeleteRole", "Role", FormMethod.Post, new { @class = "ui form root", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h3>Are you sure you want to delete this?</h3>
    <hr />

    <div class="field ui left icon input">
        @Html.TextBoxFor(m => m.Name, new { @type = "text", @placeholder = "Role Name" })
        <i class="user icon"></i>
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "ui warning message" })
    </div>
    <input type="submit" value="Delete Role" />
}


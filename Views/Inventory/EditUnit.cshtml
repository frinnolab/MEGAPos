@model MEGAPos.Models.U_O_M

@{
    ViewBag.Title = "EditUnit";
}

<link href="~/Content/UI/Register.css" rel="stylesheet" />

<h2>EditUnit</h2>

@using (Html.BeginForm("EditUnit", "Inventory", FormMethod.Post, new { @class = "ui form root", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>U_O_M</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="field ui left icon input">
            @Html.TextBoxFor(m => m.Unit_Name, new { @type = "text", @placeholder = Model.Unit_Name })
            <i class="user icon"></i>
            @Html.ValidationMessageFor(m => m.Unit_Name, "", new { @class = "ui warning message" })
        </div>


        <div class="field ui left icon input">
            <div>
                <input type="submit" value="Update Unit" class="ui button primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Users")
</div>

<style>
    .unit-input {
        display: flex;
        flex-direction: column;
    }
</style>
@model MEGAPos.Models.VAT
@{
                /**/

                ViewBag.Title = "CreateVAT";
}

<link href="~/Content/UI/Register.css" rel="stylesheet" />

<h2>Create</h2>

@using (Html.BeginForm("CreateVAT", "Settings", FormMethod.Post, new { @class = "ui form root", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h4>Item</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="field ui left icon input">
        @Html.TextBoxFor(m => m.Name, new { @type = "text", @placeholder = "VAT Name" })
        <i class="user icon"></i>
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "ui warning message" })
    </div>

    <div class="field ui left icon input">
        @Html.TextBoxFor(m => m.Value, new { @type = "text", @placeholder = "Value" })
        <i class="user icon"></i>
        @Html.ValidationMessageFor(m => m.Value, "", new { @class = "ui warning message" })
    </div>






    <div class="field ui left icon input">
        <div>
            <input type="submit" value="Create" class="ui button primary" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Users")
</div>

<style>
    .unit-input {
        display: flex;
        flex-direction: column;
    }
</style>
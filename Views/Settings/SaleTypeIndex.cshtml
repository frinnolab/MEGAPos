@model MEGAPos.ViewModels.SettingsViewModel
@{
    ViewBag.Title = "SaleTypeIndex";
}

<div class="tab-pane fade show active" id="pills-sales" role="tabpanel" aria-labelledby="pills-sales-tab">
    <p class="users-action">
        @Html.ActionLink("New Sale Type", "CreateSaleType", "Settings", null, new { @class = "btn btn-primary" })
    </p>

    <hr />

    <table class="table table-striped table-hover" id="companytable">
        <thead class="bg-dark text-white">
            <tr>
                <th>
                    NAME
                </th>
                <th>

                </th>
                @*<th>
                        DELETE
                    </th>*@


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.SalesTypes)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SaleName)
                    </td>


                    <td>
                        <a href="@Url.Action("EditSaleType","Settings",new { id = item.Id})">Edit</a>
                        |
                        <a href="@Url.Action("DeleteSaleType","Settings",new { id = item.Id})">Delete</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

<style>
    .side-menu {
        display: flex;
        justify-content: space-between;
        max-width: 100%;
        padding: 0px;
    }

    thead {
    }

    .left-side {
        margin-right: 10px;
    }

    .right-side {
        /*background-color:blue;*/
        width: 100%;
    }

    .nav-link {
        background-color: blueviolet;
    }

    inner-tab {
        display: flex;
        justify-content: space-between;
        width: 100%;
        padding: 0px;
    }

    .inner-tab-inner {
        width: 30%;
        margin: 5px;
        text-align: center;
    }

    .actions-settings {
        display: flex;
        justify-content: space-around;
    }

    .settings-card {
        padding: 50px;
        text-align: center;
    }
</style>

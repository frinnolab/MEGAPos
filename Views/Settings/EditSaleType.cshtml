@model MEGAPos.Models.SalesType
@{
    ViewBag.Title = "Edit SaleType";
}

<link href="~/Content/UI/Register.css" rel="stylesheet" />

@using (Html.BeginForm("EditSaleType", "Settings", FormMethod.Post, new { @class = "ui form root", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h4>@ViewBag.Title</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="field ui left icon input">
        @Html.TextBoxFor(m => m.SaleName, new { @type = "text", @placeholder = Model.SaleName })
        <i class="user icon"></i>
        @Html.ValidationMessageFor(m => m.SaleName, "", new { @class = "ui warning message" })
    </div>


    <div class="field ui left icon input">
        <div>
            <input type="submit" value="Update" class="ui button primary" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "SaleTypeIndex")
</div>

<style>
    .unit-input {
        display: flex;
        flex-direction: column;
    }
</style>



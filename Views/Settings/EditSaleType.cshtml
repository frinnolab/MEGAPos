@model MEGAPos.Models.PriceType
@{
    ViewBag.Title = "Edit SaleType";
}

<link href="~/Content/UI/Register.css" rel="stylesheet" />

@using (Html.BeginForm("EditSaleType", "Settings", FormMethod.Post, new { @class = "ui form root", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h4>@ViewBag.Title</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="field ui left icon input">
        @Html.TextBoxFor(m => m.Name, new { @type = "text", @placeholder = Model.Name })
        <i class="user icon"></i>
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "ui warning message" })
    </div>

    <div class="field ui left icon input">
        @Html.TextBoxFor(m => m.ItemCount, new { @type = "text", @placeholder = Model.ItemCount })
        <i class="user icon"></i>
        @Html.ValidationMessageFor(m => m.ItemCount, "", new { @class = "ui warning message" })
    </div>

    <div class="field ui left icon input">
        <label>Select Unit</label>
        @Html.DropDownListFor(m => m.Unit_Id, new SelectList(@ViewBag.Unitypes, "Value", "Text"), new { @class = "ui dropdown" })
    </div>


    <div class="field ui left icon input">
        <div>
            <input type="submit" value="Update" class="ui button primary" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "SaleTypeIndex")
</div>

<style>
    .unit-input {
        display: flex;
        flex-direction: column;
    }
</style>



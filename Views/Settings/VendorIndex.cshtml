@model MEGAPos.ViewModels.VendorViewModel
@{
    ViewBag.Title = "Vendor Index";
}

<h2>VendorIndex</h2>
<hr />
<ul class="nav nav-pills mb-3 inner-tab" id="pills-tab" role="tablist">
    <li class="nav-item inner-tab-inner">
        <a class="nav-link card active nav-link0" id="pills-stocktake-tab" data-toggle="pill" href="#pills-stocktake" role="tab" aria-controls="pills-stocktake" aria-selected="true">Vendors</a>
    </li>
    <li class="nav-item inner-tab-inner">
        <a class="nav-link card nav-link0" id="pills-stockitems-tab" data-toggle="pill" href="#pills-stockitems" role="tab" aria-controls="pills-stockitems" aria-selected="false">Vendor Types</a>
    </li>
</ul>

<div class="tab-content" id="pills-tabContent">
    @* Stock Count Tab *@
    <div class="tab-pane fade show active" id="pills-stocktake" role="tabpanel" aria-labelledby="pills-stocktake-tab">
        @*<p class="users-action">
            @Html.ActionLink("New Count", "NewStockTake", "Inventory", null, new { @class = "btn btn-primary" })
        </p>*@

        <hr />

        <table class="table table-striped table-hover" id="companytable">
            <thead class="bg-dark text-white">
                <tr>
                    <th>
                        NAME
                    </th>
                    <th>
                        EMAIL
                    </th>
                    <th>
                        ROLE
                    </th>
                    <th>

                    </th>
                    @*<th>
                            DELETE
                        </th>*@


                </tr>
            </thead>
            <tbody>

            </tbody>

        </table>
    </div>
    @* Stock Count End *@

    @* Stock Item *@
    <div class="tab-pane fade" id="pills-stockitems" role="tabpanel" aria-labelledby="pills-stockitems-tab">
        <p class="users-action">
            @Html.ActionLink("ADD VendorType", "CreateVendorType", "Settings", null, new { @class = "btn btn-primary" })
        </p>

        <hr />

        <table class="table table-striped table-hover" id="companytable">
            <thead class="bg-dark text-white">
                <tr>
                    <th>
                        NAME
                    </th>
                    <th>
                        MANAGE
                    </th>
                    <th>

                    </th>
                    @*<th>
                            DELETE
                        </th>*@


                </tr>
            </thead>
            <tbody>

            @foreach (var item in Model.VendorTypes)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a href="@Url.Action("EditVendorType","Settings",new { id = item.Id})">Edit</a>
                        |
                        <a href="@Url.Action("DeleteVendorType","Settings",new { id = item.Id})">Delete</a>
                    </td>
                </tr>
            }

            </tbody>

        </table>
    </div>
    @* Stock Item End *@
</div>

<style>
    .side-menu {
        display: flex;
        justify-content: space-between;
        max-width: 100%;
        padding: 0px;
    }

    thead {
    }

    .left-side {
        margin-right: 10px;
    }

    .right-side {
        /*background-color:blue;*/
        width: 100%;
    }

    .nav-link {
        background-color: blueviolet;
    }

    inner-tab {
        display: flex;
        justify-content: space-between;
        width: 100%;
        padding: 0px;
    }

    .inner-tab-inner {
        width: 30%;
        margin: 5px;
        text-align: center;
    }

    .actions-settings {
        display: flex;
        justify-content: space-around;
    }

    .settings-card {
        padding: 50px;
        text-align: center;
    }
</style>
<link href="~/Scripts/boo/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/boo/bootstrap.js"></script>
<script src="~/Scripts/boo/bootstrap.bundle.js"></script>
<script>
    $(document).ready(() => {
        $(".modal-btn").click(function() {
            $('.ui.basic.modal').modal('show');
        });

    });
</script>




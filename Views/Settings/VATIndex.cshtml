@model MEGAPos.ViewModels.VATViewModel
@{
    ViewBag.Title = "VAT";
}

<h2>@ViewBag.Title</h2>


<div class="tab-pane fade show active" id="pills-sales" role="tabpanel" aria-labelledby="pills-sales-tab">
    <p class="users-action">
        @Html.ActionLink("ADD VAT", "CreateVAT", "Settings", null, new { @class = "btn btn-primary" })
    </p>

    <hr />

    <table class="table table-striped table-hover" id="companytable">
        <thead class="bg-dark text-white">
            <tr>
                <th>
                    NAME
                </th>
                <th>
                    VALUE
                </th>
                <th>

                </th>
                @*<th>
                        DELETE
                    </th>*@


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.vATs)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>


                <td>
                    <a href="@Url.Action("EditVAT","Settings",new { id = item.Id})">Edit</a>
                    |
                    <a href="@Url.Action("DeleteVAT","Settings",new { id = item.Id})">Delete</a>
                </td>
            </tr>
            }
        </tbody>

    </table>
</div>

<style>
    .side-menu {
        display: flex;
        justify-content: space-between;
        max-width: 100%;
        padding: 0px;
    }

    thead {
    }

    .left-side {
        margin-right: 10px;
    }

    .right-side {
        /*background-color:blue;*/
        width: 100%;
    }

    .nav-link {
        background-color: blueviolet;
    }

    inner-tab {
        display: flex;
        justify-content: space-between;
        width: 100%;
        padding: 0px;
    }

    .inner-tab-inner {
        width: 30%;
        margin: 5px;
        text-align: center;
    }

    .actions-settings {
        display: flex;
        justify-content: space-around;
    }

    .settings-card {
        padding: 50px;
        text-align: center;
    }
</style>
<link href="~/Scripts/boo/bootstrap.css" rel="stylesheet" />
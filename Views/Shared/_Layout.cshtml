<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @*@Styles.Render("~/Content/css")*@


    <link href="~/Content/SemanticUI/semantic.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/dataTables.semanticui.css" rel="stylesheet" />
    <link href="~/Scripts/jquery-ui-1.12.1/jquery-ui.css" rel="stylesheet" />
    @*<link href="~/Content/UI/Site.css" rel="stylesheet" />*@

    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.semanticui.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1/jquery-ui.js"></script>
</head>
<body>
    
    <div class="ui pointing  menu">
        @Html.ActionLink("MEGA POS", "Index", "Home", new { area = "" }, new { @class = "item active" })
        @*@Html.ActionLink("Home", "Index", "Home", new { @class = "item" })*@
        <div class="right menu">
            @Html.Partial("_LoginPartial", new { @class = "menu" })
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @if (ViewBag.ShowFooter ?? false)
        {
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year</p>
            </footer>
        }

    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
